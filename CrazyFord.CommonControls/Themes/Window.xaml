<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="GenericWindowStyle" TargetType="{x:Type Window}">
        <Style.Setters>
            <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush}"></Setter>
            <Setter Property="Control.FontSize" Value="14"></Setter>
            <Setter Property="Control.FontFamily" Value="Segoe WP Semibold"></Setter>
        </Style.Setters>
    </Style>
    
</ResourceDictionary>