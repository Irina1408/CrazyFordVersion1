<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!--****************************** Brushes ******************************-->
    
    <LinearGradientBrush x:Key="WindowBackgroundBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FF6692E7" Offset="0.005"/>
        <GradientStop Color="#FF61B9FE" Offset="0.993"/>
        <GradientStop Color="#FF3D3AF8"/>
        <GradientStop Color="#FF041CFB" Offset="0.04"/>
    </LinearGradientBrush>

    <!-- Label -->
    <SolidColorBrush x:Key="LabelHeaderForegroundBrush" Color="#FFFBFAFA"></SolidColorBrush>
    <SolidColorBrush x:Key="LabelHeaderBackgroundBrush" Color="#FF007CFF"></SolidColorBrush>
    
    <!-- Button -->
    <SolidColorBrush x:Key="GenericButtonBrush" Color="#FF4B7BFF"></SolidColorBrush>
    
</ResourceDictionary>